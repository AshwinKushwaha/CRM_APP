@model IEnumerable<CRMApp.Models.ContactInquiry>
@{
    Layout = "_AdminLayout";
}

    <div class="" style="position:relative; top:5rem;">

    <h3 class="text-center">Enquiry List</h3>

    <hr />
    <table class="table table-hover table-striped table-bordered border-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        if(!(bool)item.isArchived){
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-break" style="white-space: pre-line;">
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            <a asp-action="ArchiveEnquiry" asp-controller="ContactInquiry" asp-route-id="@item.Id" class="btn btn-primary">Archive</a>
                        </td>
                    </tr>
        }
}
    </tbody>
</table>
</div>
