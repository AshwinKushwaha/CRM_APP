@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AdminLayout";
}
<div class="container d-flex justify-content-center ">

    <div class="login-container mt-5 mt-md-5 mt-lg-5">
        <div class="login-card" style="width: 26rem;">
            <div class="login-header">
                <h2>Sign Up</h2>
                <p>Enter credentials to register account</p>
            </div>

            <form class="login-form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <div class="input-wrapper">
                        <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true"  />
                        <label asp-for="Input.Username">Username</label>
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-wrapper">
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" >Email Address</label>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-wrapper password-wrapper">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <button type="button" class="password-toggle" id="passwordToggle" aria-label="Toggle password visibility">
                            <span class="eye-icon"></span>
                        </button>
                        
                    </div>
                   <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-wrapper password-wrapper">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <button type="button" class="password-toggle" id="passwordToggle" aria-label="Toggle password visibility">
                            <span class="eye-icon"></span>
                        </button>
                        
                    </div>
                   <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-wrapper">
                        <select asp-for="Input.Role" asp-items="Model.RoleList" class="form-control">
                            <option value="">--Select Role--</option>
                        </select>
                    </div>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <button type="submit" class="login-btn" id="registerSubmit">
                    <span class="btn-text">Register User</span>
                    <span class="btn-loader"></span>
                </button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
